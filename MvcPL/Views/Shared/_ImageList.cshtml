@model MvcPL.Models.ImageModels.ImageListViewModel
<div class="row">
    @foreach (var image in Model.Images)
    {

        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <a class="thumbnail" href="#">
                <img src="@Url.Action("GetImage", "Storage", new {id = image.Id})" class="img-responsive"/>
            </a>

            <div class="caption">
                <h3>@image.Title</h3>
                @if (Model.AttachMode)
                {
                    @Ajax.ActionLink("Add", "AttachStorageImage", "LessonPage", new
                       {
                           imageId = image.Id,
                           Model.Path.CourseId,
                           Model.Path.ModuleId,
                           Model.Path.LessonId,
                           Model.Path.LessonPageId,
                           Model.Path.Page
                       }, 
                       new AjaxOptions
                       {
                           UpdateTargetId = "page-block",
                           InsertionMode = InsertionMode.Replace,
                           HttpMethod = "get"
                       })
                }
                else
                {
                    @Html.ActionLink("Delete", "DeleteImage", "Storage", new { id = image.Id }, null)
                }
            </div>

        </div>

    }
</div>
