
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
        <ul class="nav nav-sidebar">
            <li>@Html.ActionLink("Course Catalog", "List", "Course")</li>
            <li>@Html.ActionLink("My Profile", "Details", "Profile", new {id = ViewBag.Id}, null)</li>
