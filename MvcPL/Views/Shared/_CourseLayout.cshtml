        </ul>
        
        @if (User.IsInRole("Manager"))
        {
            <hr />
            <ul class="nav nav-sidebar">
                <li><a href="#">@Html.ActionLink("Manage Courses", "ManageList", "Course", new { storageId = ViewBag.Id }, null)</a></li>
                <li><a href="">Storage</a></li>
            </ul>
        }
    </div>
    <div class="col-sm-9 col-md-10">
        @RenderBody()
    </div>
