@model MvcPL.Models.ModuleModels.ModuleBaseViewModel

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
  
        @if (Model.EnrolmentInfo.UserEnrolled || Model.IsEditable)
        {
            @Html.ActionLink("Show more", "Details", "Module",
           new { moduleId = Model.Id, courseId = Model.CourseId },
           new { @class = "btn btn-primary btn-xs btn-space" })

            if (!Model.IsEditable)
            {
                if (Model.EnrolmentInfo.IsCompleted)
                {
                    <span class="label label-success">Completed</span>
                }
                else
                {
                    <span class="label label-warning">In Progress</span>
                }
            }

        }


    @if (Model.IsEditable)
    {
        @Html.ActionLink("Edit", "Edit", "Module", new { Id = Model.Id, courseId = Model.CourseId}, 
       new { @class = "btn btn-primary btn-xs" })
    }
</div>
